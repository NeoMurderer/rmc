<div class="jumbotron" ng-app="musicBox" ng-controller="MusicList">

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Hello <%=@current_user.email%></h3>

    </div>
    <div class="panel-body">
    <div class="input-group"> 
                <input type="text" class="form-control " ng-model="song_name" placeholder="Song name">   

        <span class="input-group-btn"> 
            <button type="submit" ng-click="findSong()" class="btn btn-primary">Submit</button>
        </span>
        </div>
    </div>
</div>
<% if !defined?(session[:vk_id]) %>

<%= link_to @vk_url, class: 'btn btn-primary' do %>
  <i class="icon-home icon-white"></i>
  Войти через ВКонтакте
<% end %>

<% end %>
<div class="list-group" >
    <div class="list-group-item" ng-repeat="audio in audios">
        <div class="row-action-primary" ng-click='playSong()'>
            <i ng-class="{'mdi-av-play-arrow': audio.played!==true, 'mdi-av-pause':audio.played}"></i>
        </div>
        <div class="row-content">
            <div class="least-content">{{audio.duration}}</div>
            <h4 class="list-group-item-heading">{{audio.artist}}</h4>
            <p class="list-group-item-text">{{audio.title}}</p>
            <audio id="song_{{audio.aid}}" onended="playNext()" preload="none" ng-src="{{trustSrc(audio.url)}}"></audio>
        </div>
    </div>
   
</div>
</div>