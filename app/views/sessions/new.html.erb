<%= form_for @user_session, url: session_path do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>
<%= link_to @vk_url, class: 'btn btn-primary' do %>
  <i class="icon-home icon-white"></i>
  Войти через ВКонтакте
<% end %>
